<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicationHome"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/viewApplicationHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_job"
        android:text="View Application"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#121212"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/applyApplicationHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_registration"
        android:text="Apply Application"
        android:layout_marginTop="25dp"
        android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#121212"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</LinearLayout>