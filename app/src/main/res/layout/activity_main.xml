<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:layout_marginBottom="50dp"
        android:textSize="38dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/user_usname"
        android:hint="Username"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_uername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/user_uspass"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawablePadding="5dp"
        android:background="@drawable/edt_uername"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/user_login"
            android:text="login"
            android:background="@drawable/btnuserdesig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="#99A80000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a user?"/>
    <TextView
        android:id="@+id/user_signup"
        android:textColor="#061C9C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Sign up!"/>
</LinearLayout>
</LinearLayout>